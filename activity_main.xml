<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    tools:context=".MainActivity"
    android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Quiz App HDTT"
            android:textSize="30dp"
            android:textColor="#2B9A22"
            android:id="@+id/tvTenApp"
            android:gravity="center"
            android:layout_weight="0.3" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="120dp"
            android:layout_height="15dp"
            android:background="@drawable/star"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.3" />

        <LinearLayout
            android:orientation="horizontal"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2">





            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/mute"
                android:id="@+id/btnMute"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/volume1"
                android:id="@+id/btnUnMute"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/ifnormation"
                android:id="@+id/btnInformation" />
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/unnamed"
                android:id="@+id/btnShare"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/help"
                android:id="@+id/btnHelp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="App development by team HDTT @2017"
            android:id="@+id/tvInformation"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.1" />

    </LinearLayout>